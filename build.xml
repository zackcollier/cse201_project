<project name="AppOrganizationTool" default="dist" basedir=".">
  <property name="version">0.5</version>
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist" location="dist"/>
  
  <target name="clean" description="clean up">
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
  
  <target name="init" depends="clean">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>
  
  <target name="compile" depends="init" description="compile source code">
    <javac srcdir="${src}" destdir="${build}"/>
  </target>
  
  <target name="dist" depends="compile" description="generates distribution">
    <mkdir dir="${dist}/lib"/>
    <jar jarfile="${dist}/lib/AppOrganizationTool-${version}.jar" basedir="${build}"/>
  </target>
</project>
