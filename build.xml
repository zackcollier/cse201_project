<!-- Simply run XML to build and run project -->
<!-- Ensure source code is in "src" folder, and "build" and "dist" folders are not being used for anything else -->
<!-- Optionally, folder names and version number can be altered by changing the properties declared below -->
<project name="AppOrganizationTool" default="exec" basedir=".">
	<property name="version">0.5</property>
	<property name="src" location="src" />
	<property name="build" location="build" />
	<property name="dist" location="dist" />

	<target name="clean" description="clean up">
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>

	<target name="init" depends="clean">
		<tstamp />
		<mkdir dir="${build}" />
		<mkdir dir="${dist}/lib" />
	</target>

	<target name="compile" depends="init" description="compile source code">
		<javac srcdir="${src}" destdir="${build}" includeantruntime="false"/>
	</target>

	<target name="dist" depends="compile" description="generates distribution">
		<jar destfile="${dist}/lib/AppOrganizationTool-${version}.jar" basedir="${build}" />
	</target>

	<target name="exec" depends="dist" description="runs jar generated by dist">
		<exec executable="java">
			<arg value="-cp"/>
			<arg value="${dist}/lib/AppOrganizationTool-${version}.jar"/>
			<arg value="AppOrganizationTool"/>
		</exec>
	</target>
</project>
